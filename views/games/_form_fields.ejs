<div class="form-row">
  <div class="form-item">
      <label>Title</label>
      <input type="text" name="title" value="<%= game.title %>">
  </div>
  <div class="form-item">
      <label>Developer</label>
      <select name="developer">
      <% developers.forEach(developer => { %>
        <% if (developer.id === game.developer) { %>
          <option selected label="<%= developer.name %>" value="<%= developer.id %>">
        <% } else { %>
          <option label="<%= developer.name %>" value="<%= developer.id %>">
        <% } %>
      <% }) %>
      </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Release Date</label>
    <input type="date" name="releaseDate"
          value="<%= game.releaseDate == null ? '' : game.releaseDate.toISOString().split('T')[0] %>">
  </div>
  <div class="form-item">
    <label>Estimated Playtime (in hours)</label>
    <input type="number" name="playTime" min="1" value="<%= game.playTime %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Publisher</label>
          <input type="text" name="publisher" value="<%= game.publisher %>">
  </div>
  <div class="form-item">
    <label>Genre</label>
    <input type="text" name="genre" value="<%= game.genre %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>Cover</label>
    <input type="file" name="cover" class="game-cover filepond">
  </div>
  <div class="form-item">
    <label>Description</label>
    <textarea name="description"><%= game.description %></textarea>
  </div>
</div>